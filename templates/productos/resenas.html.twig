{% extends 'base.html.twig' %}

{% block title %}Rese√±as de {{ producto.nombre }} - Tienda Online{% endblock %}

{% block content %}
<div class="content-container">
    <main class="contacto">
        <section class="section-contact-form">
            <h1 class="titulo-centrado">Rese√±as de {{ producto.nombre }}</h1>

            {% if resenas is not empty %}
                <div class="resenas-container">
                    {% for resena in resenas %}
                        <div class="resena-item">
                            <p><strong>Usuario:</strong> {{ resena.user.nombre }}</p>
                            <p><strong>Valoraci√≥n:</strong> 
                                {% for i in 1..5 %}
                                    {% if i <= resena.puntuacion %}
                                        <span class="estrella llena">‚òÖ</span>
                                    {% else %}
                                        <span class="estrella vacia">‚òÜ</span>
                                    {% endif %}
                                {% endfor %}
                            </p>
                            <p><strong>Fecha:</strong> {{ resena.fecha|date("d/m/Y") }}</p>
                            <p><strong>Comentario:</strong> {{ resena.comentario }}</p>
                            
                            <div class="like-dislike">
                                <button class="like-button" onclick="handleLike(this, {{ resena.id }})">üëç</button>
                                <span class="like-count">{{ resena.likes }}</span>
                                <button class="dislike-button" onclick="handleDislike(this, {{ resena.id }})">üëé</button>
                                <span class="dislike-count">{{ resena.dislikes }}</span>
                            </div>

                        </div>
                        <hr>
                    {% endfor %}
                </div>
            {% else %}
                <p>No hay rese√±as para este producto.</p>
            {% endif %}

            <a href="{{ path('productos') }}" class="button volver">Volver a Productos</a>
        </section>
    </main>
</div>

<script>
    // Funci√≥n para manejar los "me gusta"
    async function handleLike(button, resenaId) {
        try {
            const response = await fetch(`/api/resena/${resenaId}/like`, {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                }
            });
            const data = await response.json();
            const likeCount = button.nextElementSibling;
            likeCount.innerText = data.likes;
        } catch (error) {
            console.error('Error al enviar "me gusta":', error);
        }
    }

    // Funci√≥n para manejar los "no me gusta"
    async function handleDislike(button, resenaId) {
        try {
            const response = await fetch(`/api/resena/${resenaId}/dislike`, {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                }
            });
            const data = await response.json();
            const dislikeCount = button.nextElementSibling;
            dislikeCount.innerText = data.dislikes;
        } catch (error) {
            console.error('Error al enviar "no me gusta":', error);
        }
    }
</script>


<style>
    .content-container {
        margin-top: 180px;
        padding: 20px;
    }

    .contacto {
        max-width: 800px;
        margin: 0 auto;
        padding: 20px;
        font-family: Arial, sans-serif;
    }

    .section-contact-form {
        background-color: #f9f9f9;
        border-radius: 8px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        padding: 20px;
        margin-bottom: 40px;
    }

    .section-contact-form h1 {
        text-align: center;
        font-size: 1.8rem;
        margin-bottom: 20px;
    }

    .resenas-container {
        display: flex;
        flex-direction: column;
        gap: 15px;
    }

    .resena-item {
        background-color: #ffffff;
        padding: 15px;
        border-radius: 8px;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
    }

    .resena-item p {
        margin: 0;
        font-size: 1rem;
        line-height: 1.5;
    }

    .resena-item p strong {
        font-weight: bold;
        color: #333;
    }

    .estrella {
        font-size: 1.2rem;
        color: #ffca08;
        margin-right: 2px;
    }

    .like-dislike {
        display: flex;
        align-items: center;
        gap: 5px;
        margin-top: 10px;
    }

    .like-button, .dislike-button {
        background: none;
        border: none;
        font-size: 1.2rem;
        cursor: pointer;
        color: #333;
    }

    .like-button:hover, .dislike-button:hover {
        color: #007bff;
    }

    .like-count, .dislike-count {
        font-size: 1rem;
        color: #333;
    }

    .button.volver {
        display: inline-block;
        padding: 10px 20px;
        background-color: #007bff;
        color: white;
        border: none;
        border-radius: 4px;
        text-align: center;
        cursor: pointer;
        margin-top: 20px;
        text-decoration: none;
    }

    .button.volver:hover {
        background-color: #0056b3;
    }

    hr {
        border: none;
        border-top: 1px solid #ddd;
        margin: 10px 0;
    }
</style>
{% endblock %}
