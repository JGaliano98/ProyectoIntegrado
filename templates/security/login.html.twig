{% extends 'base.html.twig' %}

{% block title %}Iniciar Sesión - Carnicería Hnos Galiano{% endblock %}

{% block content %}
    <div class="login-container">
        <h1 class="h3 mb-3 font-weight-normal">Iniciar Sesión</h1>
        
        {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        {% if app.user %}
            <div class="mb-3">
                Estás conectado como {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}" class="link">Cerrar sesión</a>
            </div>
        {% endif %}

        <form method="post">
            <div class="form-group">
                <label for="username">Correo Electrónico</label>
                <input type="email" value="{{ last_username }}" name="_username" id="username" class="form-control" autocomplete="email" required autofocus>
            </div>

            <div class="form-group">
                <label for="password">Contraseña</label>
                <input type="password" name="_password" id="password" class="form-control" autocomplete="current-password" required>
            </div>

            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

            <button class="button" type="submit">
                Iniciar Sesión
            </button>
        </form>

        <p class="mt-3">
            ¿No está registrado? <a href="{{ path('app_register') }}">Hágalo aquí</a>.
        </p>
    </div>
{% endblock %}
