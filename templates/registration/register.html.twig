{% extends 'base.html.twig' %}

{% block title %}Registrarse - Carnicería Hnos Galiano{% endblock %}

{% block content %}
    <div class="content-container">
        <div class="container mt-5">
            <div class="login-container" style="max-width: 800px; margin: 0 auto;">
                <h1 class="h3 mb-3 font-weight-normal">Registrarse</h1>

                {% for flash_error in app.flashes('verify_email_error') %}
                    <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
                {% endfor %}

                {{ form_errors(registrationForm) }}

                {{ form_start(registrationForm) }}
                
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="registration_nombre">Nombre</label>
                            {{ form_widget(registrationForm.nombre, {'attr': {'class': 'form-control', 'id': 'registration_nombre'}}) }}
                        </div>

                        <div class="form-group">
                            <label for="registration_apellido1">Apellido 1</label>
                            {{ form_widget(registrationForm.apellido1, {'attr': {'class': 'form-control', 'id': 'registration_apellido1'}}) }}
                        </div>

                        <div class="form-group">
                            <label for="registration_apellido2">Apellido 2</label>
                            {{ form_widget(registrationForm.apellido2, {'attr': {'class': 'form-control', 'id': 'registration_apellido2'}}) }}
                        </div>
                    </div>
                    
                    <div class="col-md-6">
                        <div class="form-group">
                            <label for="registration_telefono">Teléfono</label>
                            {{ form_widget(registrationForm.telefono, {'attr': {'class': 'form-control', 'id': 'registration_telefono'}}) }}
                        </div>

                        <div class="form-group">
                            <label for="registration_email">Correo Electrónico</label>
                            {{ form_widget(registrationForm.email, {'attr': {'class': 'form-control', 'id': 'registration_email'}}) }}
                        </div>

                        <div class="form-group">
                            <label for="registration_password">Contraseña</label>
                            {{ form_widget(registrationForm.plainPassword, {'attr': {'class': 'form-control', 'id': 'registration_password'}}) }}
                        </div>
                    </div>
                </div>

                <button type="submit" class="button">Registrarse</button>

                {{ form_end(registrationForm) }}

                <p class="mt-3">
                    ¿Ya tienes una cuenta? <a href="{{ path('app_login') }}">Iniciar Sesión</a>.
                </p>
            </div>
        </div>
    </div>
{% endblock %}
